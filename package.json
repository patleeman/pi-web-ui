{
  "name": "pi-web-ui",
  "version": "0.1.0",
  "private": true,
  "description": "A full-featured web UI for Pi coding agent",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w @pi-web-ui/server",
    "dev:client": "npm run dev -w @pi-web-ui/client",
    "build": "npm run build -w @pi-web-ui/server && npm run build -w @pi-web-ui/client",
    "start": "npm run start -w @pi-web-ui/server",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.3"
  }
}
